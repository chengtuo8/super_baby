page{
  background-color: white;
}
.hidden{
  display: none!important;
}
.bg{
  display: block;
  margin: 50rpx auto;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
}
.bgAnimation {
  animation: bg 5s linear infinite;
}
@keyframes bg {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.icon{
  display: flex;
  margin-left:120rpx;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
}
.icon image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 30rpx;
}
.icon .big{
  width: 150rpx;
  height: 150rpx;
  margin-top: -20rpx;
}
audio{
  width: 100%;
}