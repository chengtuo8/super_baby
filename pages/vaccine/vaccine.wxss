.hasDone {
  position: relative;
  top: 50rpx;
  right: 100rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  border-radius: 10% 10% 10% 10%;
  overflow: hidden;
  background-color: rgba(255, 165, 0, .7);
}

.overdue {
  display: none;
  position: absolute;
  right: 174rpx;
  top: 3rpx;
  font-size: 170rpx;
  color: #999;
}

.overtime .overdue {
  display: block;
}

.overtime view {
  color: #999;
}

.title text {
  display: none;
}

.title text.nowadays {
  display: inline;
  color: rgba(255, 0, 0, .7);
}

