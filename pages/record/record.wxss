page {
  background-color: #fff;
}

.cu-timeline {
  margin-top: 40rpx;
  position: relative;
}

.more {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f37b1d;
}

.more::before,
.more::after {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  content: "";
  display: block;
  width: 6rpx;
  height: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.more::after {
  transform: rotate(90deg);
}

.add {
  width: 80%;
}

.add button {
  margin-left: 20rpx;
  width: 140rpx!important;
}

.add .detail {
  padding: 20rpx 10rpx;
}

.add .detail textarea {
  width: 100%;
  height: 300rpx;
  text-align: left;
}

.add .detail .showImg {
  position: relative;
  width: 300rpx;
  height: 200rpx;
}

.add .detail image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 4rpx;
}

.add .detail .delImg {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, 0.5); 
  border-radius: 4rpx;
}
.add .detail .delImg text{
  width: 100%;
  height: 100%;
  color: #fff;
}

.cu-timeline image {
  position: absolute;
  z-index: 9999;
  top: 210rpx;
  left: 110rpx;
  width: 600rpx;
  height: 525rpx;
  border-radius: 10rpx;
}

